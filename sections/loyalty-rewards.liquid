<div class="rewards" style="background-color: {{ section.settings.bg }}">
  {%- if section.settings.heading != blank -%}
    <h2>{{ section.settings.heading }}</h2>
  {%- endif -%}

  <div 
    class="yotpo-widget-instance" 
    data-yotpo-instance-id="779100"
  ></div>
</div>

<style>
  .rewards {
    margin: 0;
    padding: 4rem 1.25rem;
  }
  .rewards h2 {
    text-align: center;
    font-family: Celine Sans;
    font-size: 36px;
    font-weight: 400;
    line-height: 41.55px;

  }

  /* Campaign */

  .rewards .yotpo-widget-campaign-widget .yotpo-widget-campaign-widget-container {
    padding: 0 !important;
  }
  
  .rewards .yotpo-widget-campaign-widget .campaigns-wrapper {
    
      grid-template-columns: repeat(3, 1fr);
      list-style: none;
      margin: 0 auto;
      max-width: 1200px;
      padding: 0;
  }
  @media only screen and (min-width: 769px) {
    .rewards {
      margin: 0;
      padding: 4rem 2.7rem;
    }
    .rewards h2 {
      font-size: 50px;
    }
    .rewards .yotpo-widget-campaign-widget .campaigns-wrapper {
      gap: 1.5rem;
      display: grid;
      margin: 2rem auto;
    }
  }
  .rewards .yotpo-widget-campaign-widget .yotpo-tile {
    justify-content: flex-end;
  }
  .rewards .yotpo-widget-campaign-widget .yotpo-tile [aria-label] {
    min-height: 60%;
    display: flex;
    flex-direction: column-reverse;
    justify-content: space-between;
    align-items: center;
  }
  .rewards .yotpo-description-text {
      font-size: 30px !important;
      line-height: 0.8 !important;
      font-family: Celine Sans !important;
      font-weight: 700 !important;
      line-height: 29.92px !important;
  }
  /* widget tiles */
  .rewards .yotpo-widget-campaign-widget .yotpo-outer-tile {
    width: 100% !important;
    padding-top: 100%;
    overflow: hidden;
    border-radius: 0;
    border: none;
  }
  .rewards .yotpo-widget-campaign-widget .yotpo-outer-tile:focus,
  .rewards .yotpo-widget-campaign-widget .yotpo-outer-tile *:focus{
    outline: none;
    box-shadow: none;
  }
  
  .rewards .yotpo-widget-campaign-widget .yotpo-tile-wrapper {
    border-radius: 0 !important;
  }
  .rewards .yotpo-widget-campaign-widget .yotpo-campaign-switcher-wrapper {
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    border-radius: 0;
  }
  .rewards .yotpo-headline-center-element {
    margin-bottom: 32px;
    padding: 0.5rem 2rem;
    background: #252525;
    min-width: 170px;
    font-family: Avenir !important;
    font-size: 16px !important;
    font-weight: 800 !important;
    line-height: 21.86px !important;
  }
  .rewards .yotpo-headline-center-element:has(.yotpo-completed-icon) {
    background: #D9D9D9;
    text-transform: uppercase;
  }
  .rewards .yotpo-headline-center-element:has(.yotpo-completed-icon) .yotpo-title-text {
    color: black !important;
  }
  .rewards .yotpo-headline-center-element .yotpo-completed-icon {
    display: none !important;
  }
  .rewards .yotpo-headline-center-element .yotpo-title-text {
    font-family: 'Avenir' !important;
    font-size: 14px !important;
    font-weight: 800 !important;
    text-transform: uppercase;
  }
  @media only screen and (min-width: 1200px) {
      .rewards .yotpo-description-text {
          font-size: 36px !important;
      }
  }  

