{%- render 'hero', section: section, loyalty: true -%}

{% schema %}
{
  "name": "Loyalty Hero",
  "class": "shopify-section--loyalty",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Content",
      "default": "<p>Enter text for your content here.<\/p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Background",
      "default": "#F0EEE7"
    }
  ],
  "blocks": [
    {
      "type": "cta",
      "name": "CTA",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Shop Now"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#000000"
        }
      ]
    }
  ]
}
{% endschema %}
